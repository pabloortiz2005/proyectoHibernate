<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>

    <!-- Configuración de la conexión a la base de datos -->
    <session-factory>
        <!-- JDBC Connection settings -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/AnimalBd</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password"/>



        <!-- Echo all executed SQL to stdout -->
        <property name="hibernate.show_sql">true</property>

        <!-- Drop and re-create the database schema on startup -->
        <property name="hibernate.hbm2ddl.auto">update</property> <!-- Opciones: update, create, create-drop, validate -->

        <!-- Echo all executed SQL to stdout -->
        <property name="hibernate.format_sql">true</property>



        <mapping class="org.example.entities.Animal"/>
    </session-factory>

</hibernate-configuration>
